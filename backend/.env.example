###############################################
# .env.example
#
# Copie este arquivo para .env e preencha com
# seus valores locais/produção. NÃO COMMITAR .env
#
# IMPORTANTE: Nenhuma credencial real aqui.
###############################################

# App
NODE_ENV=development
PORT=3000

# Database (ex.: Railway/MySQL)
DB_HOST=YOUR_DB_HOST
DB_PORT=3306
DB_NAME=YOUR_DB_NAME
DB_USER=YOUR_DB_USER
DB_PASS=YOUR_DB_PASSWORD

# JWT Security (defina segredos fortes em produção)
JWT_SECRET=CHANGE_ME_IN_PRODUCTION
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Cloudinary (opcional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
